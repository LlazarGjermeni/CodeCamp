@model IEnumerable<Category>


<li class="dropdown">
    <a asp-controller="Toys"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Toys<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Toys" asp-action="Index"
                   asp-route-category="@category.CategoryName">@category.CategoryName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Toys" asp-action="Index" asp-route-Category="">View all toys</a>
        </li>
    </ul>
</li>